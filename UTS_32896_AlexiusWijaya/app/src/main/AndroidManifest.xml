<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="umn.ac.id">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/playcover"
        android:label="@string/app_name"
        android:roundIcon="@drawable/playcover"
        android:supportsRtl="true"
        android:theme="@style/Theme.UTS_32896">
        <activity android:name=".Player">
            android:label="Player"
            android:parentActivityName=".DaftarLagu">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="umn.ac.id.DaftarLagu" />
        </activity>
        <activity android:name=".DaftarLagu" />
        <activity android:name=".Profil">
            android:label="Profil"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="umn.ac.id.MainActivity" />
        </activity>
        <activity android:name=".Login" >
            android:label="Login"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="umn.ac.id.MainActivity" />
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>